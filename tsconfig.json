{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "declaration": true,
        "outDir": "dist",
        "declarationDir": "dist",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}